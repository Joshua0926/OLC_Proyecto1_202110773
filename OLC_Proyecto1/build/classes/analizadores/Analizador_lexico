tkFlecha = "-" {Espacio}* ">"
tkComa = ","
tkOnda="~"
tkLlaveA="{"
tkLlaveC="}"
tkConcatenacion="."
tkDisyuncion="|"
tkKleene="*"
tkPositiva="+"
tkBooleana="?"
tkPorcentaje="%"
tkPuntoComa=";"
Espacio= [ \t\r\n]+
CMultilinea="<!" ([^!] | ("!" [^\>]))+ "!>"
CSimple="//".*
tkMinuscula= [a-z]
tkMayuscula= [A-Z]
tkNumero = [0-9]
tkEspeciales = [ -/:@\[-`{-}]
Escapados = "\\\""|"\\\'"|"\\n"
NoEscapados = [^\'\"]
tkIdentificador = [a-zA-Z_][a-zA-Z0-9_]+
tkChar = (\" {NoEscapados} \")|{Escapados}
tkString = \" ([^\"]|"\\\"")+ \"

